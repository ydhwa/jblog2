<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">

<!-- 유저 추가 -->
<insert id="insert" parameterType="uservo">
	<![CDATA[
		insert into users values(#{ id }, #{ name }, #{ password }, now());
	]]>
</insert>


<!-- 유저 정보 가져오기(로그인 시) -->
<select id="getByIdAndPassword" parameterType="map" resultType="uservo">
	<![CDATA[
		select id, name from users
		where id = #{ id } and password = #{ password };
	]]>
</select>


<!-- 로그인 한 유저 정보(보안 상 패스워드는 제외) (수정 시 - 수정 아직 미구현) -->
<select id="getById" parameterType="string" resultType="uservo">
	<![CDATA[
		select id, name from users
		where id = #{ id };
	]]>
</select>

</mapper>
